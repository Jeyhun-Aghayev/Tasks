@{
    ViewData["Title"] = "Home Page";
}



@{
    string[] languages = { "C#", "Java", "Python", "JavaScript", "TypeScript", "PHP", "Swift", "Kotlin" };
}


@model string

@if (Model is not null)
{
    <div class="row mt-5">
        <div class="col">
            <h1 class="display-1">Kullandığınız Yazılım Dili</h1>
            <hr /> <!-- Human Resources :)-->
            <h1 class="display-4 text-center rounded shadow-sm bg-warning p-3">@Model</h1>
            <p>Yeni bir seçim için (clear)  <a class="btn-link" asp-action="clear">tıklayınız</a>   </p>
            <p>Yeni bir seçim için (delete) <a class="btn-link" asp-action="delete">tıklayınız</a> </p>
        </div>
    </div>
}
else
{ 
    <div class="row mt-5 ">
        <div class="col">
            <h1 class="display-4 border-bottom pb-2">Hangi Programlama Dilini Kullanıyorsunuz?</h1>
        </div>
    </div>

    <form method="post">
        <div class="row row-cols-4">
            @foreach (string lang in languages)
            {
                <div class="col mt-2 mb-5">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="@lang" name="survey" id="@lang" />
                        <label for="@lang" class="form-check-label">@lang</label>
                    </div>
                </div>
            }

            <div class="col-12 ">
                <button class="btn btn-outline-dark mt-5 float-end btn-sm">Onayla</button>
            </div>
        </div>
    </form> 
}











